   <children>
      <ImageView fx:id="bookImageView" fitHeight="282.0" fitWidth="200.0" layoutX="47.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="430.0" layoutY="37.0" text="Book Information" />
      <VBox layoutX="333.0" layoutY="78.0">
         <children>
            <Label text="Title:" />
            <Label text="Author:" />
            <Label text="Publisher:" />
            <Label text="Publication Year:" />
            <Label text="Average Rating:" />
         </children>
      </VBox>
      <VBox layoutX="486.0" layoutY="78.0">
         <children>
            <Label fx:id="titleLabel" text="Label" />
            <Label fx:id="authorLabel" text="Label" />
            <Label fx:id="publisherLabel" text="Label" />
            <Label fx:id="yearLabel" text="Label" />
            <Label fx:id="ratingLabel" text="Label" />
         </children>
      </VBox>
      <Button fx:id="returnButton" layoutX="188.0" layoutY="348.0" mnemonicParsing="false" onAction="#returnButtonHandler" text="Return" />
      <Button fx:id="quitButton" layoutX="377.0" layoutY="348.0" mnemonicParsing="false" onAction="#quitButtonHandler" text="Quit" />
   </children>
